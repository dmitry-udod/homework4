<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="company_repository"
                 class="Skrepka\CompanyBundle\Document\CompanyRepository"
                 factory-service="doctrine.odm.mongodb.document_manager"
                 factory-method="getRepository">
            <argument>CompanyBundle:Company</argument>
        </service>

        <service id="media_repository"
                 class="Skrepka\CompanyBundle\Document\File\MediaRepository"
                 factory-service="doctrine.odm.mongodb.document_manager"
                 factory-method="getRepository">
            <argument>Skrepka\CompanyBundle\Document\File\Media</argument>
        </service>

        <service id="company_manager"
                 class="Skrepka\CompanyBundle\CompanyManager"
                 factory-service="doctrine.odm.mongodb.document_manager"
                 >
            <argument type="service" id="company_repository"/>
            <argument type="service" id="security.context"/>
            <argument type="service" id="fos_user.user_manager"/>
            <argument type="service" id="media_repository"/>
            <argument type="service" id="session"/>
        </service>

        <service id="company.twig.company_extension" class="Skrepka\CompanyBundle\Twig\CompanyExtension">
            <tag name="twig.extension" />
        </service>
    </services>
</container>
