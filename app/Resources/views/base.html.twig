<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta charset="UTF-8" />
        <meta name="description" content="{% block meta_desc %}Черкассы, полный каталог предприятий Черкасс, список фирм Черкассы, организации Черкасс, фирмы Черкасс, справочник Черкасс, Украина{% endblock %}">
        <meta name="keywords" content="{% block meta_keywords %}Черкассы, предприятия Черкасс, фирмы Черкассы,школы, вузы, техникумы Черкасс, учереждения Черкасс{% endblock %}">
        <title>{% block title %}Каталог предприятий, фирм, учреждений Черкасс{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/styles.css') }}" rel="stylesheet">
            <link href="{{ asset('js/lib/select2/select2.css') }}" rel="stylesheet">
        {% endblock %}
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="wrapper container">
            {% block header_and_navbar %}
            <header style="height: 85px">
                <a class="pull-left" href="{{ path('homepage') }}"><img src="{{ asset('images/logo.png') }}" alt="Logo"></a>
                {#<div style="margin-left: 90px; position: relative;" class="pull-left">#}
                    {#<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>#}
                    {#<!-- firma.ck.ua Top Baneer -->#}
                    {#<ins class="adsbygoogle"#}
                         {#style="display:inline-block;width:468px;height:60px"#}
                         {#data-ad-client="ca-pub-0304027910256312"#}
                         {#data-ad-slot="2119584003"></ins>#}
                    {#<script>#}
                        {#(adsbygoogle = window.adsbygoogle || []).push({});#}
                    {#</script>#}
                {#</div>#}
                <form name="search" action="{{ path('company_search') }}" method="get" class="form-inline form-search pull-right">
                    <div class="input-group">
                        <label class="sr-only" for="searchInput">Search</label>
                        <input class="form-control" id="searchInput" type="text" name="q" placeholder="{{ 'search_placeholder'|trans }}" value="{{ app.request.get('q') }}">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                </form>
            </header>

            <nav class="navbar navbar-default">
                <ul class="nav navbar-nav" style="width:100%">
                    {# Catalog #}
                    <li class="{% if app.request.get('_route') == 'homepage' or app.request.get('_route') == 'companies_for_category' %}active{% endif %}"><a href="{{ path('homepage') }}">{{ 'companies'|trans }}</a></li>

                    {#Login/Logoout#}
                    <li class="pull-right {% if app.request.get('_route') == 'fos_user_security_login' %}active{% endif %}">
                        {% if app.user %}
                        <a class="tip" data-toggle="tooltip" data-placement="bottom" title="{{ 'logout'|trans }}" href="{{ path('fos_user_security_logout') }}">
                            <i class="glyphicon glyphicon-log-out"></i>
                        </a>
                        {% else %}
                            <a href="{{ path('fos_user_security_login') }}">
                                <i class="glyphicon glyphicon-log-in"></i>&nbsp;&nbsp;{{ 'login'|trans }}
                            </a>
                        {% endif %}
                    </li>

                    {% if app.user %}
                        {% if is_user_has_company(app.user) %}
                            <li class="pull-right {% if app.request.get('_route') == 'company_edit' %}active{% endif %}">
                                <a href="{{ path('company_edit', { 'slug': app.user.company.slug }) }}">{{ 'comany_my'|trans }}</a>
                            </li>
                        {% else %}
                            <li class="pull-right {% if app.request.get('_route') == 'company_new' %}active{% endif %}">
                                <a href="{{ path('company_new') }}">
                                    <i class="glyphicon glyphicon-plus"></i> {{ 'new_company_creation'|trans }}
                                </a>
                            </li>
                        {% endif %}
                    {% else %}
                        <li class="pull-right">
                            <a href="{{ path('company_new') }}">
                                <i class="glyphicon glyphicon-plus"></i>
                                {{ 'new_company_creation'|trans }}
                            </a>
                        </li>
                    {% endif %}
                    <li class="{% if app.request.get('_route') == 'categories' %}active{% endif %}">
                        <a href="{{ path('categories') }}">{{ 'categories'|trans }}</a>
                    </li>
                </ul>
            </nav>
            {% endblock %}

            {% block body %}{% endblock %}
        </div>

        {% block footer %}
        <footer id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 twitter">
                        <h3>Twitter</h3>
                        <time datetime="2014-04-27"><a href="#">27 апр</a></time>
                        <p>
                            Мы открылись! Правда в жесткой альфе :)
                        </p>
                    </div>
                    <div class="col-md-4 sitemap">
                        <h3>{{ 'main_page.sitemap'|trans }}</h3>
                        <div class="row">
                            <div class="col-md-12">
                                <a href="{{ path('homepage') }}">{{ 'main_page.home'|trans }}</a>
                                <a href="{{ path('categories') }}">{{ 'categories'|trans }}</a>
                            </div>
                            <div class="col-md-12">
                                <a href="{{ path('nelmio_api_doc_index') }}">API</a>
                                {#<a href="/about/">{{ 'main_page.footer.about_us'|trans }}</a>#}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 social center-block">
                        <h3>{{ 'main_page.socials'|trans }}</h3>
                        <a href="http://twitter.com/" class="social-icon twitter"></a>
                        <a href="http://facebook.com/" class="social-icon facebook"></a>
                        <a href="http://plus.google.com/" class="social-icon google-plus"></a>
                    </div>
                    <div class="col-md-8 footer-logo">
                        <a href="/"><img src="{{ asset('images/footer-logo.png') }}" alt="Logo"></a>
                        <p>
                            Copyright &copy; 2014 firma.ck.ua
                        </p>
                    </div>
                </div>
            </div>
        </footer>
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/jquery.v1.10.1.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('js/lib/select2/select2.min.js') }}"></script>
            {% javascripts '@CompanyBundle/Resources/public/js/*' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}

            {#User Voice Widget#}
            <script>(function(){var uv=document.createElement('script');uv.type='text/javascript';uv.async=true;uv.src='//widget.uservoice.com/KucUkHfojg9dSRxEqRpyKw.js';var s=document.getElementsByTagName('script')[0];s.parentNode.insertBefore(uv,s)})()</script>

            <script>
                UserVoice = window.UserVoice || [];
                UserVoice.push(['showTab', 'classic_widget', {
                    mode: 'full',
                    primary_color: '#cc6d00',
                    link_color: '#007dbf',
                    default_mode: 'support',
                    forum_id: 249594,
                    tab_label: '{{ 'user_voice.tab.label'|trans }}',
                    tab_color: '#007DBF',
                    tab_position: 'middle-right',
                    tab_inverted: false
                }]);
            </script>

