{% extends "::base.html.twig" %}
{% block title %}{{ 'form.login.title'|trans }}{% endblock %}

{% trans_default_domain 'UserBundle' %}

{% block body %}
    {% block fos_user_content %}
        <div class="container ">
            <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-14 col-sm-offset-5">
                {% if error %}
                    <div class="alert alert-danger border-radius">{{ error|trans }}</div>
                {% endif %}

                <div class="panel panel-info border-radius" >
                    <div class="panel-heading">
                        <div class="panel-title">{{ 'form.login.title'|trans }}</div>
                        <div style="float:right; font-size: 80%; position: relative; top:-15px"><a href="{{ path('fos_user_resetting_request') }}">{{ 'form.forgote_pass'|trans }}</a></div>
                    </div>
                    <div style="padding-top:30px" class="panel-body" >
                        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                            <form id="loginform" class="form-horizontal" role="form" action="{{ path("fos_user_security_check") }}" method="post">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                    <input class="white-bg form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="{{ 'form.placeholder.email'|trans }}" autocomplete="off" />
                                </div>

                                <div style="margin-bottom: 7px" class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                    <input class="white-bg form-control" class="form-control" type="password" id="password" name="_password" placeholder="{{ 'form.placeholder.password'|trans }}" />
                                </div>

                                <div class="checkbox pull-right">
                                    <label class="checkbox" style="padding-left:0px; padding-right: 10px">
                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                        {{ 'security.login.remember_me'|trans }}
                                    </label>
                                </div>

                                <div style="margin-top:10px" class="form-group">
                                    <div class="col-sm-24 controls">
                                        <input class="btn btn-primary btn-success center-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" style="width:200px" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-24 control">
                                        <div style="border-top: 1px solid #ddd; padding-top:15px;" >
                                            {{ 'form.no_account'|trans }}
                                            <a href="{{ path('fos_user_registration_register') }}">{{ 'form.register'|trans }}</a>
                                        </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
