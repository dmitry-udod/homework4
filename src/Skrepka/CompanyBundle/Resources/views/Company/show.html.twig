{% extends "::base.html.twig" %}

{% block body %}
<h1>Company</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ document.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ document.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ document.description }}</td>
        </tr>
        <tr>
            <th>Lat</th>
            <td>{{ document.lat }}</td>
        </tr>
        <tr>
            <th>Long</th>
            <td>{{ document.long }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('company') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('company_edit', { 'slug': document.slug }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('company_delete', { 'id': document.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}