{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        {% for error in errors %}
            <span class="help-inline error">{{ error.message }}</span>
        {% endfor %}
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block form_row %}
    <div class="control-group ">
        {{ form_label(form) }}
        <div class="controls">
            {{ form_errors(form) }}
            {{ form_widget(form, { 'attr': {'class': 'form-control white-bg'} }) }}
            <div class="imagePreview"></div>
        </div>
    </div>
{% endblock form_row %}

{% extends 'form_div_layout.html.twig' %}
{% block form_label %}
    {{ parent() }}
    {% if required %}
        <span class="required" style="color:red; margin-left:2px" title="This field is required">*</span>
    {% endif %}
{% endblock %}
